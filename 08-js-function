      ];

// 生成小猫信息的函数
function generateCatInfo() {
  const randomIndex = Math.floor(Math.random() * catData.length);
  return catData[randomIndex];
}

// 按钮点击事件处理函数
document.getElementById('generateBtn').addEventListener('click', function() {
  const catInfoContainer = document.getElementById('catInfo');
  const catInfo = generateCatInfo();

  catInfoContainer.innerHTML = `
    <p><strong>品种：</strong> ${catInfo.breed}</p>
    <p><strong>性格：</strong> ${catInfo.personality}</p>
    <p><strong>提醒：</strong> ${catInfo.reminder}</p>
    <p><strong>养护指导：</strong> ${catInfo.careGuide}</p>
  `;
});
</script>
